<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sulsulmarket.sulsul.mypage.mapper.MypageMapper">

    <select id="getOrderList" resultType="com.sulsulmarket.sulsul.mypage.dto.Orders">
        SELECT * FROM ORDERS WHERE MEMBER_ID LIKE CONCAT(#{MEMBER_ID})
    </select>

    <select id="getOrderDetailList" resultType="com.sulsulmarket.sulsul.mypage.dto.Order_Detail">
        SELECT * FROM ORDER_DETAIL WHERE ORDER_NO = (#{ORDER_NO})
    </select>

    <select id="getReviewList" resultType="com.sulsulmarket.sulsul.mypage.dto.Review">
        SELECT * FROM REVIEW WHERE MEMBER_ID LIKE CONCAT(#{MEMBER_ID})
    </select>

    <select id="getUserInfo" resultType="com.sulsulmarket.sulsul.mypage.dto.Member">
        SELECT * FROM MEMBER WHERE MEMBER_ID LIKE CONCAT(#{MEMBER_ID})
    </select>

    <select id="getAddressList" resultType="com.sulsulmarket.sulsul.mypage.dto.Address">
        SELECT * FROM ADDRESS WHERE MEMBER_ID LIKE CONCAT(#{MEMBER_ID})
    </select>

    <select id="getCancelRefundList" resultType="com.sulsulmarket.sulsul.mypage.dto.Claim_Info">
        SELECT * FROM CLAIM_INFO INNER JOIN CLAIM ON CLAIM_INFO.CLAIM_CODE = CLAIM.CLAIM_CODE
        WHERE MEMBER_ID LIKE CONCAT(#{MEMBER_ID})
    </select>

</mapper>