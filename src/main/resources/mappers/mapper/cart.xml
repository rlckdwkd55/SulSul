<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sulsulmarket.sulsul.cart.mapper.CartMapper">

    <select id="getCartByMemberIdAndProductNo" resultType="com.sulsulmarket.sulsul.cart.dto.CartDTO">
        FROM CART
        WHERE MEMBER_ID = #{memberId}
        AND PRODUCT_NO = #{productNo}
    </select>

    <update id="updateCartCount">
        UPDATE CART
        SET CART_AMOUNT = #{cartAmount}
        WHERE MEMBER_ID = #{memberId}
          AND PRODUCT_NO = #{productNo}
    </update>

    <insert id="addCartByMemberIdAndProduct">
        INSERT INTO CART(
                 MEMBER_ID
                ,PRODUCT_NO
                ,CART_AMOUNT
        ) VALUES(
                 #{memberId}
                ,#{productNo}
                ,#{cartAmount}
                )
    </insert>

    <delete id="deleteCartByMemberId">
        DELETE FROM CART
        WHERE MEMBER_ID = #{memberId}
          AND PRODUCT_NO = #{productNo}
    </delete>

    <select id="productListByProductNo" resultType="com.sulsulmarket.sulsul.cart.dto.ProductDTO">
        SELECT *
        FROM PRODUCT
        WHERE PRODUCT_NO = #{productNo}
    </select>

    <select id="productImageByProductNo" resultType="com.sulsulmarket.sulsul.cart.dto.ProductImageDTO">
        SELECT *
        FROM PRODUCT_IMAGE
        WHERE PRODUCT_NO = #{productNo}
    </select>

    <select id="getCartListByMemberId" resultType="com.sulsulmarket.sulsul.cart.dto.CartDTO">
        SELECT *
        FROM CART
        WHERE MEMBER_ID = #{memberId}
    </select>

</mapper>